<% provide(:title, "Edit word") %>
<h1>Edit word in <strong><%= @word.category.name %></strong> category</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @word do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :content, "Input a word" %>
      <%= f.text_field :content, class: "form-control" %>
      <%= f.label :meaning, "Input mean of word" %>
      <%= f.text_field :meaning, class: "form-control" %>
      <strong>Add answer for this word</strong>
      <%= f.fields_for :answers do |builder| %>
        <%= builder.label :content, "Answer: " %>
        <%= builder.text_field :content, class: "form-control" %>
        <%= builder.label :correct, class: "checkbox seperate" do %>
          <span>Correct Answer</span>
          <%= builder.check_box :correct, onclick: "has_one_correct_answer(this)" %>
        <% end %>
      <% end %>
      <%= f.submit "Update word", class: "btn btn-primary" %>
    <% end %>
  </div>  
</div>  