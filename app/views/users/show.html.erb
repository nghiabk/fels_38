<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %><br><br><br><br>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
     Learned <%= @user.learns.count %> word
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
  </div>
  <aside>
    <div class="lessons">
      <h1>Activities</h1>
      <h2>Learned <%= @user.lessons.count %> lessons</h2><br>
      <%= render @user.lessons %>
    </div>
  </aside>
</div>